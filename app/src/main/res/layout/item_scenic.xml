<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/item_topRL"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="3dp"
	android:background="@color/bg_bottom"
	app:cardCornerRadius="5dp">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:focusable="true"
		android:padding="8dp"
        android:focusableInTouchMode="true">
		<TextView
			android:id="@+id/item_titleTV"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:textSize="18sp"
			android:gravity="center_horizontal"/>
		<ImageView
			android:id="@+id/item_previewIV"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_below="@id/item_titleTV"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"/>
		<ImageView
			android:id="@+id/item_goIV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="2dp"
			android:layout_below="@id/item_previewIV"
			android:layout_marginTop="3dp"
			android:layout_alignParentRight="true"
			android:src="@mipmap/ic_go"/>
		<TextView
			android:id="@+id/item_addr"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/item_previewIV"
			android:layout_marginLeft="10dp"
			android:layout_toLeftOf="@id/item_goIV"
			android:maxLines="2"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginTop="6dp"
			android:layout_below="@id/item_addr">
			<TextView
				android:id="@+id/item_gradeTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="1dp"
				android:drawablePadding="2dp"
				android:layout_centerHorizontal="true"/>
			<TextView
				android:id="@+id/item_priceTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:drawablePadding="3dp"
				android:paddingRight="5dp"/>
		</RelativeLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>
